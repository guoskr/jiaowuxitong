<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cv_show"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/spacing_normal"
    android:elevation="@dimen/spacing_small"
    android:foreground="?android:attr/selectableItemBackground"
    app:cardCornerRadius="@dimen/spacing_smaller"
    >

    <TableLayout
        android:id="@+id/cv_showqj"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/light_grey"
        android:padding="@dimen/spacing_normal"
        tools:ignore="DuplicateIds">

        <TableRow android:background="@color/white">

            <TextView
                android:layout_marginRight="@dimen/spacing_smaller"
                android:background="@color/white"
                android:text="原因:"
                android:textSize="@dimen/font_large" />

            <TextView
                android:id="@+id/tv_show_number"
                android:background="@color/white"
                android:textColor="@android:color/black"
                android:textSize="@dimen/font_large"
                tools:text="20158888144" />
        </TableRow>

        <TableRow android:background="@color/white">

            <TextView
                android:id="@+id/cv_showqj"
                android:layout_marginRight="@dimen/spacing_smaller"
                android:background="@color/white"
                android:text="去时:"
                android:textSize="@dimen/font_large" />

            <TextView
                android:id="@+id/tv_show_name"
                android:background="@color/white"
                android:textColor="@android:color/black"
                android:textSize="@dimen/font_large"
                tools:text="许xx" />

            <TextView
                android:layout_marginRight="@dimen/spacing_smaller"
                android:background="@color/white"
                android:text="返时:"
                android:textSize="@dimen/font_large" />

            <TextView
                android:id="@+id/tv_show_gender"
                android:textColor="@android:color/black"
                android:textSize="@dimen/font_large"
                tools:text="女" />
        </TableRow>

    </TableLayout>

</androidx.cardview.widget.CardView>